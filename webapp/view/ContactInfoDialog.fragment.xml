<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="contactDialog"
    >
        <VBox>
            <f:SimpleForm title="{i18n>contactDetails}">
                <f:content>
                    <Label text="{i18n>name}" />
                    <Text text="{ContactName}" />

                    <Label text="{i18n>contactTitle}" />
                    <Text text="{ContactTitle}" />

                    <Label text="{i18n>address}" />
                    <Text text="{Address}" />

                    <Label text="{i18n>phoneNumber}" />
                    <Text text="{Phone}" />
                </f:content>
            </f:SimpleForm>
        </VBox>
        <beginButton>
            <Button type="Reject" text="{i18n>close}" press="onCloseCustomerDetails" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
